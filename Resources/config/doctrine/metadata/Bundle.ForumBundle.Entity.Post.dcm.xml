<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Bundle\ForumBundle\Entity\Post" table="forum_post" repository-class="Bundle\ForumBundle\Entity\PostRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="message" column="message" type="text" />
        
        <field name="createdAt" column="created_at" type="datetime" />

        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" />

        <one-to-one field="author" target-entity="Bundle\DoctrineUserBundle\Entity\User" />

        <many-to-one target-entity="Topic" field="topic" inversed-by="topics">
            <join-column name="topic_id" referenced-column-name="id" on-delete="cascade" />
        </many-to-one>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="setCreatedNow" />
            <lifecycle-callback type="preUpdate" method="setUpdatedNow" />
            <lifecycle-callback type="preRemove" method="decrementTopicNumRepliesOnPreRemove" />
        </lifecycle-callbacks>

    </entity>

</doctrine-mapping>
