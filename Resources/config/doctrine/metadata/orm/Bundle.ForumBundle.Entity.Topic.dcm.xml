<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
                  
    <entity name="Bundle\ForumBundle\Entity\Topic" table="forum_topic" repository-class="Bundle\ForumBundle\Entity\TopicRepository">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="subject" column="subject" type="string" />

        <field name="numViews" column="num_views" type="integer" />

        <field name="numPosts" column="num_posts" type="integer" />

        <field name="isClosed" column="is_closed" type="boolean" />

        <field name="isPinned" column="is_pinned" type="boolean" />

        <field name="isBuried" column="is_buried" type="boolean" />

        <field name="createdAt" column="created_at" type="datetime" />

        <field name="pulledAt" column="pulled_at" type="datetime" />

        <many-to-one target-entity="Category" field="category">
            <join-column name="category_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one field="author" target-entity="Bundle\DoctrineUserBundle\Entity\User">
            <join-columns>
                <join-column name="author_id" referenced-column-name="id" on-delete="SET NULL" />
            </join-columns>
        </many-to-one>

        <one-to-one field="firstPost" target-entity="Post">
            <join-column name="first_post_id" referenced-column-name="id" on-delete="CASCADE" />
        </one-to-one>

        <one-to-one field="lastPost" target-entity="Post">
            <join-column name="last_post_id" referenced-column-name="id" on-delete="SET NULL" />
        </one-to-one>

        <one-to-many target-entity="Post" mapped-by="topic" field="posts">
            <order-by>
                <order-by-field name="createdAt" direction="ASC" />
            </order-by>
        </one-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="validateBeforePersist" />
            <lifecycle-callback type="prePersist" method="setCreatedNow" />
            <lifecycle-callback type="prePersist" method="setPulledNow" />
            <lifecycle-callback type="prePersist" method="setAsCategoryLastTopic" />
            <lifecycle-callback type="prePersist" method="incrementCategoryNumTopics" />
            <lifecycle-callback type="preRemove" method="decrementCategoryNumTopics" />
        </lifecycle-callbacks>

    </entity>

</doctrine-mapping>
