<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://www.symfony-project.org/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="forum.form.new_topic.class">Bundle\ForumBundle\Form\NewTopicForm</parameter>
        <parameter key="forum.form.new_topic.name">forum_new_topic_form</parameter>
        <parameter key="forum.form.first_post.class">Bundle\ForumBundle\Form\PostForm</parameter>
        <parameter key="forum.form.first_post.name">firstPost</parameter>
        <parameter key="forum.form.post.class">Bundle\ForumBundle\Form\PostForm</parameter>
        <parameter key="forum.form.post.name">forum_post_form</parameter>
    </parameters>

    <services>

        <service id="forum.form.new_topic"
            class="%forum.form.new_topic.class%"
            factory-class="%forum.form.new_topic.class%"
            factory-method="create">
            <argument type="service" id="form.context" />
            <argument>%forum.form.new_topic.name%</argument>
            <argument type="collection">
                <argument key="theme">%forum.template.theme%</argument>
                <argument key="topic_class">%forum.model.topic.class%</argument>
                <argument key="category_repository" type="service" id="forum.repository.category" />
                <argument key="post_form" type="service" id="forum.form.first_post" />
            </argument>
        </service>

        <service id="forum.form.post"
            class="%forum.form.post.class%"
            factory-class="%forum.form.post.class%"
            factory-method="create">
            <argument type="service" id="form.context" />
            <argument>%forum.form.post.name%</argument>
            <argument type="collection">
                <argument key="theme">%forum.template.theme%</argument>
                <argument key="post_class">%forum.model.post.class%</argument>
            </argument>
        </service>

        <service id="forum.form.first_post"
            class="%forum.form.first_post.class%"
            factory-class="%forum.form.first_post.class%"
            factory-method="create">
            <argument type="service" id="form.context" />
            <argument>%forum.form.first_post.name%</argument>
            <argument type="collection">
                <argument key="theme">%forum.template.theme%</argument>
                <argument key="post_class">%forum.model.post.class%</argument>
            </argument>
        </service>

    </services>

</container>
